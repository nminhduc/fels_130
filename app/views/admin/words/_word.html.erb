<div class="list-group-item">
  <div class="row">
    <div class="col-md-4">
      <%= word.content %>
    </div>
    <div class="col-md-4 text-right">
      <%= link_to [:edit, :admin, word.course, word],
        class: "btn btn-info btn-xs" do %>
        <span class="glyphicon glyphicon-edit"></span>
        <%= t :edit_word %>
      <% end %>
      <%= link_to [:admin, word.course, word],
        class: "btn btn-danger btn-xs", data: {confirm: t(:you_sure)},
        method: :delete do %>
        <span class="glyphicon glyphicon-remove"></span>
        <%= t :delete %>
      <% end %>
    </div>
  </div>
</div>
