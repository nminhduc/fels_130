<% provide :title, t("_course") %>
<div class="container">
  <h1>
    <%= @course.name %> 
  </h1>

  <h2>
    <%= @course.description %>
  </h2>
  <%= link_to new_admin_course_word_path(@course),
    class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus-sign"></span>
    <%= t :create_a_word %>
  <% end %>
</div>
<br/>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t :words %></h3>
  </div>
  <% if @words.any? %>
    <%= render @words %>
    <div class="text-center">
      <%= will_paginate @words %>
    </div>
  <% else %>
    <%= t :no_items_found %>
  <% end %>
</div>
