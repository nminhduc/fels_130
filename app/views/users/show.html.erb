<% provide :title, t("profile") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <p>
        <%= gravatar_for @user %></br>
        <%= t "name" %>: <%= @user.name %></br>
        <%= t "email" %>: <%= @user.email %>
      </p>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
  </div>
</div>
