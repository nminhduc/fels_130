<% provide title: t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for current_user %>
          <%= current_user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome" %></h1>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
