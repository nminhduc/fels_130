<% @user ||= current_user %>
<div class="stats">
  <label class = "label=auto">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <strong>
      <%= t "following" %>
    </strong>
  </label>
  <label class = "label-auto">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <strong>
      <%= t "followers" %>
    </strong>
  </label>
</div>
